<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Same base, plus Android 12+ splash attributes. -->
    <style name="Base.Theme.Rebrickable" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Android 12+ splash (uses your launcher icon). -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenBackground">@android:color/black</item>
    </style>

    <style name="Theme.Rebrickable" parent="Base.Theme.Rebrickable" />
</resources>
